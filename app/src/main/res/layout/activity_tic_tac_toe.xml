<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D3B3B"
    tools:context=".TicTacToeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="top|center"
            android:background="@drawable/x_player_user"/>
        <TextView
            android:id="@+id/XscoreView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#5E7DDB"
            android:text="0" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:orientation="vertical"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="top|center"
            android:background="@drawable/o_player_user"/>
        <TextView
            android:id="@+id/OscoreView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#D35B5B"
            android:text="0"  />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />
            <Button
                android:id="@+id/button01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />
            <Button
                android:id="@+id/button02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />
            <Button
                android:id="@+id/button11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />
            <Button
                android:id="@+id/button12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />
            <Button
                android:id="@+id/button21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />
            <Button
                android:id="@+id/button22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/tic_tac_toe_background"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="70dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_category_buttons"
            android:layout_gravity="center">

            <Button
                android:id="@+id/RestartButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/restart_logo"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/BackToProfileFromTicTacToe"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Back To Profile"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="15dp"
        android:padding="4dp"
        android:textSize="18dp"
        android:background="@drawable/rounded_button"
        android:textColor="#F3EFEF"/>

</FrameLayout>