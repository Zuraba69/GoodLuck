<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_color"
    tools:context=".Profile">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/change_password_button"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Change Password"
            android:textColor="#F3EFEF"
            android:padding="4dp"
            android:textSize="18dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.942" />

        <Button
            android:id="@+id/log_out_btn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Log out"
            android:padding="4dp"
            android:textSize="18dp"
            android:textColor="#F3EFEF"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.942" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Zurabi"
            android:textColor="#F3EFEF"
            android:background="@drawable/rounded_question"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_category_buttons">

            <Button
                android:id="@+id/TriviaButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/trivia_real_logo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_category_buttons">
            <Button
                android:id="@+id/TicTacToeButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/tic_tac_toe_button_logo" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>