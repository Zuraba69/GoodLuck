<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".GameActivityMusic">

    <LinearLayout
        android:id="@+id/question_music_1"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_question"
            android:gravity="center"
            android:text="Who wrote the first trash metal?"
            android:textColor="#F3EFEF"
            android:textSize="20dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/amswear_music_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/music_answear_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_weight="1"
            android:textColor="#F3EFEF"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Metallica" />

        <Button
            android:id="@+id/music_answear_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F3EFEF"
            android:background="@drawable/rounded_button"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Queen" />

        <Button
            android:id="@+id/music_answear_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:textColor="#F3EFEF"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Iron Maiden" />

        <Button
            android:id="@+id/music_answear_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:textColor="#F3EFEF"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:text="Slayer" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_music_2"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_question"
            android:gravity="center"
            android:text="Who is the author of the little piece of heaven?"
            android:textColor="#F3EFEF"
            android:textSize="20dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/amswear_music_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:visibility="invisible">

        <Button
            android:id="@+id/music_answear_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_weight="1"
            android:textColor="#F3EFEF"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Twenty One Pilots" />

        <Button
            android:id="@+id/music_answear_22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F3EFEF"
            android:background="@drawable/rounded_button"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Led Zeppelin" />

        <Button
            android:id="@+id/music_answear_23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:textColor="#F3EFEF"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Opeth" />

        <Button
            android:id="@+id/music_answear_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:textColor="#F3EFEF"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:text="Avenged Sevenfold" />
    </LinearLayout>

    <TextView
        android:id="@+id/ScoreInGame"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_button"
        android:textColor="#F3EFEF"
        android:padding="10dp"
        android:gravity="center"
        android:text="0"
        android:textSize="70dp" />
</FrameLayout>