<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".NeverEver">

    <ImageView
        android:layout_gravity="center|top"
        android:id="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/never_ever_logo" />

    <LinearLayout
        android:id="@+id/never_ever_guide"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/rounded_category_buttons"
        android:visibility="visible"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="You will see the sentence and if you made it once you have to put your finger down"
            android:textColor="#F3EFEF"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/never_ever_sentence_bar"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/rounded_category_buttons"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/never_ever_sentence"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#F3EFEF"
                android:textSize="30dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_category_buttons"
            android:textColor="#F3EFEF"
            android:textSize="18dp"
            android:visibility="invisible"
            android:text="NEXT"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:padding="4dp"
            android:layout_marginBottom="18dp"
            android:textSize="18dp"
            android:background="@drawable/rounded_button"
            android:visibility="visible"
            android:textColor="#F3EFEF"/>
        <Button
            android:id="@+id/BackToProfileFromNeverEver"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Back To Profile"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15dp"
            android:padding="4dp"
            android:textSize="18dp"
            android:background="@drawable/rounded_button"
            android:textColor="#F3EFEF"/>
    </LinearLayout>


</FrameLayout>